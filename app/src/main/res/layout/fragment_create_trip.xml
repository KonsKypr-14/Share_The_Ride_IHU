<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/trip_id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip ID" />

        <EditText
            android:id="@+id/organizer_id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organizer ID" />

        <EditText
            android:id="@+id/organizer_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organizer Name" />

        <EditText
            android:id="@+id/vehicle_plate_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Plate" />

        <EditText
            android:id="@+id/car_model_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Model" />

        <EditText
            android:id="@+id/start_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Location" />

        <EditText
            android:id="@+id/end_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Location" />

        <EditText
            android:id="@+id/pickup_points_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Points (comma-separated)" />

        <EditText
            android:id="@+id/start_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Time (Timestamp)" />

        <EditText
            android:id="@+id/end_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time (Timestamp)" />

        <EditText
            android:id="@+id/max_passengers_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Passengers" />

        <EditText
            android:id="@+id/current_passengers_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Passengers" />

        <EditText
            android:id="@+id/trip_status_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip Status" />

        <EditText
            android:id="@+id/price_per_seat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price Per Seat" />

        <EditText
            android:id="@+id/rating_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rating" />

        <Button
            android:id="@+id/create_trip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Trip"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
